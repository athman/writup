  <div>
    <%= f.hidden_field :followed_id %>
    <%= button_tag(type: "submit", class: "btn btn-lg btn-primary btn-success") do %>
      Follow <span class="glyphicon glyphicon-plus"></span>
    <% end %>
  </div>
<% end %>