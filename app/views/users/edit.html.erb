<%= provide(:title, "Edit user") %>
<%= form_for @user, html: { class: "form-signin" } do |f| %>
  <h2>Update your profile</h2>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails">Change your gravatar</a>
  <%= f.text_field :first_name, class: "form-control", placeholder: "first name" %>
  <%= f.text_field :surname, class: "form-control", placeholder: "last name" %>
  <%= f.email_field :email, class: "form-control", placeholder: "email" %>
  <%= f.password_field :password, class: "form-control", placeholder: "password" %>
  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "confirm password" %>
  <%= f.submit "Save changes", class: "btn btn-lg btn-primary btn-block" %>
<% end %>