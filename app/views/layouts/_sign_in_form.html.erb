<%= form_for(:session, :url => sessions_path, :html => {:class => "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Sign in</h2>
  <% if flash[:error] %>
    <%= render "shared/session_sign_in_error_message" %>
  <% end %>
  <%= f.email_field :email, class: "form-control", placeholder: "email" %>
  <%= f.password_field :password, class: "form-control", placeholder: "password" %>
  <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
  <h5>Don't have an account? <%= link_to "Sign up", signup_path, :class => "btn btn-xs btn-success" %></h5>
<% end %>