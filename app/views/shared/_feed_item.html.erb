<div class="media" id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user, size: 50, class: "media-object"), feed_item.user, class: "pull-left" %>
  <div class="media-body post">
    <div class="post_header panel">
      <h3><%= link_to feed_item.title.html_safe, feed_item %></h3>
      <span><strong>By: </strong><%= link_to feed_item.user.first_name, feed_item.user %></span>
      <span><strong>Posted: </strong><%= time_ago_in_words(feed_item.created_at) %> <%= "#{ "ago" }" %> </span>
    </div>
    <div class="post_body">
      <%= feed_item.content.html_safe %>
    </div>
    <div class="post_footer">
      <% if current_user?feed_item.user %>
        <%= link_to "Delete", feed_item, method: :delete, data: { confirm: "Are you sure you want to delete this post" },title: feed_item.content, class: "btn btn-default btn-sm" %>
      <% end %>
    </div>
  </div>
</div>
<hr />
